'----------------------------------------------------------------------
Class TagH1
	'------------------------------------------------------------------
	' すべての属性情報をクリアする
	'------------------------------------------------------------------
	Public Sub TagClear()
	End Sub
	
	'------------------------------------------------------------------
	' 開始タグ文字列を返す
	'------------------------------------------------------------------
	Public Function TagOpen()
		TagOpen = "<h1"
		TagOpen = TagOpen & ">"
	End Function
	
	'------------------------------------------------------------------
	' 終了タグ文字列を返す
	'------------------------------------------------------------------
	Public Function TagClose()
		TagClose = "</h1>"
	End Function
	
	'------------------------------------------------------------------
	' <tag>text</tag>という文字列を返す
	'------------------------------------------------------------------
	Public Function TagWrite(text)
		TagWrite = TagOpen() & text & TagClose()
	End Function
	
	'------------------------------------------------------------------
	' <tag>text</tag>という文字列をResponse.Writeで、ブラウザに返す
	'------------------------------------------------------------------
	Public Sub ResponseWrite(text)
		Response.Write(TagWrite(text))
	End Sub
End Class

